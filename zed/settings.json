// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark"
  },
  "experimental.theme_overrides": {
      "background.appearance": "blurred",
      "background": "#00000090",
      "editor.background": "#00000030",
      "editor.gutter.background": "#00000030",
      "tab_bar.background": "#00000030",
      "terminal.background": "#00000030",
      "toolbar.background": "#00000030",
      "tab.active_background": "#ffffff05",
      "tab.inactive_background": "#00000000",
      "status_bar.background": "#00000030",
      "title_bar.background": "#00000030",
      "panel.background": "#00000030",
      "border.variant": "#00000000",
      "scrollbar.track.border": "#00000000",
      "editor.active_line.background": "#00000040"
    },
  "format_on_save": "off"
}
